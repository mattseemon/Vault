<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ContextMenu x:Key="TBIContextMenu" >
        <MenuItem Header="Show" Command="{Binding ShowCommand}" />
        <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
    </ContextMenu>
    <Border x:Key="TBITooltip" Background="{DynamicResource MahApps.Brushes.SystemControlBackgroundAccent}" BorderBrush="{DynamicResource MahApps.Brushes.Control.Border}" CornerRadius="2" BorderThickness=".5">
        <StackPanel Margin="10">
            <TextBlock FontWeight="Bold" FontSize="14" Margin="0 0 0 5" Foreground="{DynamicResource MahApps.Brushes.Selected.Foreground}">VAULT</TextBlock>
            <TextBlock Foreground="{DynamicResource MahApps.Brushes.Selected.Foreground}">Double click the tray icon to display main window.</TextBlock>
        </StackPanel>
    </Border>
</ResourceDictionary>